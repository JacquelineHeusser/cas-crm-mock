generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")      // Transaction Pooler (Port 6543)
  directUrl  = env("DIRECT_DATABASE_URL")  // Session Pooler (Port 5432)
}

// User-Tabelle für alle 3 Nutzergruppen
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      UserRole @default(CUSTOMER) // CUSTOMER, BROKER, UNDERWRITER
  companyId String?  // Für Firmenkunden und Vermittler
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  company     Company?           @relation(fields: [companyId], references: [id])
  quotes      Quote[]            @relation("QuoteCreator")
  customerQuotes Quote[]         @relation("QuoteCustomer")
  policies    Policy[]
  underwritingCases UnderwritingCase[]

  @@map("users")
}

// Unternehmen (KMU)
model Company {
  id          String   @id @default(cuid())
  name        String
  address     String
  zip         String
  city        String
  country     String   @default("CH")
  url         String?
  industry    String
  revenue     BigInt   // Umsatz in Rappen
  employees   Int      // Anzahl Mitarbeitende
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Beziehungen
  users User[]
  quotes Quote[]
  policies Policy[]

  @@map("companies")
}

// Versicherungsvermittler
model Broker {
  id        String   @id @default(cuid())
  name      String   // Name des Vermittlers
  company   String   // Vermittlerfirma
  location  String   // Standort
  email     String?  // Optionale E-Mail
  phone     String?  // Optionale Telefonnummer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  quotes Quote[]

  @@map("brokers")
}

// Versicherungs-Offerten
model Quote {
  id          String      @id @default(cuid())
  quoteNumber String      @unique
  companyId   String?     // Optional während Erfassung
  userId      String      // Erstellt von (Kunde oder Broker)
  customerId  String?     // Versicherungsnehmer (bei Broker-Offerten)
  brokerId    String?     // Vermittler (falls durch Broker/Underwriter erstellt)
  status      QuoteStatus @default(DRAFT)
  
  // Formulardaten (JSON für Flexibilität)
  companyData          Json? // Sektion 1: Unternehmensdaten
  cyberRiskProfile     Json? // Sektion 2: Cyber Risikoprofil
  cyberSecurity        Json? // Sektion 3: Cyber-Sicherheit
  coverage             Json? // Sektion 4: Versicherte Leistungen
  
  // Risiko-Score (wird berechnet)
  riskScore       RiskScore? @default(A)
  riskScoreReason String?
  
  // Preis (wird berechnet)
  premium         BigInt? // Prämie in Rappen
  
  // Zeitstempel
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  company Company? @relation(fields: [companyId], references: [id])
  user    User    @relation("QuoteCreator", fields: [userId], references: [id])
  customer User?  @relation("QuoteCustomer", fields: [customerId], references: [id])
  broker  Broker?  @relation(fields: [brokerId], references: [id])
  underwritingCase UnderwritingCase?
  policy  Policy?

  @@map("quotes")
}

// Underwriting-Fälle (für Score C-E)
model UnderwritingCase {
  id          String              @id @default(cuid())
  quoteId     String              @unique
  underwriterId String?           // Zugewiesener Underwriter
  status      UnderwritingStatus  @default(PENDING)
  decision    UnderwritingDecision?
  notes       String?
  internalNotes String?           // Nur für Underwriter sichtbar
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Beziehungen
  quote       Quote @relation(fields: [quoteId], references: [id])
  underwriter User? @relation(fields: [underwriterId], references: [id])

  @@map("underwriting_cases")
}

// Versicherungspolicen (abgeschlossene Verträge)
model Policy {
  id           String       @id @default(cuid())
  policyNumber String       @unique
  quoteId      String       @unique
  userId       String       // Policeninhaber
  companyId    String?      // Versichertes Unternehmen
  status       PolicyStatus @default(ACTIVE)
  
  // Versicherungsdaten
  startDate    DateTime     // Versicherungsbeginn
  endDate      DateTime     // Versicherungsende (normalerweise +1 Jahr)
  premium      BigInt       // Jahresprämie in Rappen
  coverage     Json         // Deckungsdaten (Paket, Summen, etc.)
  
  // Zeitstempel
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Beziehungen
  quote   Quote   @relation(fields: [quoteId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
  company Company? @relation(fields: [companyId], references: [id])
  policyChunks PolicyChunk[]  // Chatbot Vector Chunks
  
  @@map("policies")
}

// Dun & Bradstreet Mock-Unternehmen
model DnbCompany {
  id             String   @id @default(cuid())
  dunsNumber     String   @unique // D&B-ähnliche Identifikationsnummer
  name           String
  address        String
  zip            String
  city           String
  country        String   @default("CH")
  industryCode   String   // z. B. NOGA/NAICS Code
  employeeCount  Int
  annualRevenue  BigInt   // Jahresumsatz in Rappen
  riskRating     Int      // 1 (sehr gut) bis 5 (sehr schlecht)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("dnb_companies")
}

// Enums
enum UserRole {
  CUSTOMER
  BROKER
  UNDERWRITER
  MFU_TEAMLEITER
  HEAD_CYBER_UNDERWRITING
}

enum QuoteStatus {
  DRAFT
  CALCULATED
  PENDING_UNDERWRITING  // Risikoprüfung ausstehend
  APPROVED
  REJECTED
  EXPIRED
  POLICIED
}

enum RiskScore {
  A // Sehr gut
  B // Gut
  C // Mittel
  D // Schlecht
  E // Sehr schlecht
}

enum UnderwritingStatus {
  PENDING
  IN_REVIEW
  APPROVED
  REJECTED
  NEEDS_INFO
}

enum UnderwritingDecision {
  APPROVE
  REJECT
  REQUEST_INFO
}

enum PolicyStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

// =====================================================
// CHATBOT VECTOR TABLES
// =====================================================

// Policen-Chunks für RAG
model PolicyChunk {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  policyId   String   @map("policy_id")
  content    String   @db.Text
  embedding  Unsupported("vector(1024)")?
  metadata   Json?    // { policyNumber, customerName, type, status }
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  policy Policy @relation(fields: [policyId], references: [id], onDelete: Cascade)

  @@index([policyId])
  @@map("policy_chunks")
}

// Web-Content Chunks (Zürich Website)
model WebChunk {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sourceUrl  String   @map("source_url") @db.Text
  title      String?  @db.VarChar(500)
  content    String   @db.Text
  embedding  Unsupported("vector(1024)")?
  metadata   Json?    // { category, lastScraped, contentType }
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  @@unique([sourceUrl])
  @@index([sourceUrl])
  @@map("web_chunks")
}

// Gesetzes-Chunks (VVG, VAG)
model LawChunk {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  lawCode    String   @map("law_code") @db.VarChar(20)  // VVG, VAG
  articleNum String   @map("article_num") @db.VarChar(20)  // Art. 1, Art. 2a
  content    String   @db.Text
  embedding  Unsupported("vector(1024)")?
  sourceUrl  String   @map("source_url") @db.Text
  metadata   Json?    // { title, section, effectiveDate }
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  @@unique([lawCode, articleNum])
  @@index([lawCode, articleNum])
  @@map("law_chunks")
}
